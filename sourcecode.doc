			rewards.push_back(std::move(reward));
		}
	}
}
std::string autoSplit(const std::string& str){
	std::string newStr;
	for(int i=0;i<str.length();i++){
		newStr+=str[i];
		if(i%26==0&&i!=0){
			newStr+='\n';
		}
	}
	newStr+='\0';
	return newStr;
}
const Reward& DataManager::getReward(const int i){
	return rewards.at(i);
}
